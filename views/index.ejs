<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-3">
            <h2 class="alert alert-success text-center">Add New Student</h2>
            <form action="" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name">
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="text" class="form-control" name="age" id="age">
                </div>
                <div class="mb-3">
                    <label for="fees" class="form-label">fees</label>
                    <input type="text" class = "form-control" name="fees" id="fees">
                </div>
                <input type="submit" name="" id="" class="btn btn-primary">
            </form>
        </div>
        <div class="col-sm-6 mt-3">
            <h2 class="alert alert-danger text-center">List Of Students</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="col">No</th>
                        <th class="col">Name</th>
                        <th class="col">Age</th>
                        <th class="col">Fees</th>
                        <th class="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%var i = 1%>
                    <% data.forEach((item)=>{ %>
                        <tr>
                            <td><%= i++ %></td>
                            <td><%= item.Name %></td>
                            <td><%=  item.Age %></td>
                            <td><%= item.fees.toString() %></td>
                            <td>
                                <a href="/student/edit/<%= item._id %>"><i class="fas fa-pen-square text-info"></i></a>
                                <a href="/student/delete/<%= item._id %>"><i class="fas fa-trash text-danger"></i></a>
                            </td>
                        </tr>


                    <% })%>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
   
   